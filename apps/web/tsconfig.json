{
  "compilerOptions": {
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "target": "ES2022",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "incremental": true,
    "paths": {
      "@crm/ui": ["../../packages/ui/src/index.ts"],
      "@crm/utils": ["../../packages/utils/src/index.ts"],
      "@crm/types": ["../../packages/types/src/index.ts"],
      "@crm/config": ["../../packages/config/src/index.ts"],
      "@crm/db": ["../../packages/db/src/index.ts"]
    }
  },
  "include": ["src/**/*", "../../packages/ui/src/**/*", "../../packages/types/src/**/*", "../../packages/utils/src/**/*"],
  "exclude": ["node_modules", "dist", "build", ".next"]
}
